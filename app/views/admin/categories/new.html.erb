<h1 class="about-index">Add New Category</h1>

<section class="admin-products-new">

  <header class="page-header">
    <h1>Admin &raquo; New Product</h1>
  </header>

  <div class="well">
 <%= link_to 'Back', [:admin, :products], class: 'btn btn-secondary' %>
    <%= button_to 'Admin Categories', [:admin, :categories], method: :get, class: 'btn btn-primary' %>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for [:admin, @category] do |form| %>

        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li>
                  <%= error %>
                </li>
                <% end %>
            </ul>
          </div>
          <% end %>
            <div class="form-group">
              <%= form.label :name %>
                <%= form.text_field :name, class: 'form-control', id: 'category_name' %>
            </div>
            <%= form.submit 'Create Category' , class: 'btn btn-primary', disabled: button_disabled?(form), id: 'submit_button' %>
              <% end %>
    </div>
  </div>

</section><br>

