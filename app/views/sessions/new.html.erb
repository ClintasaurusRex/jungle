<h1>Log In</h1>

<%= form_with(url: login_path, local: true) do |form| %>
  <% if flash[:alert] %>
    <div id="error_explanation">
      <p>
        <%= flash[:alert] %>
      </p>
    </div>
    <% end %>

      <div class="field">
        <%= form.label :email %>
          <%= form.email_field :email, name: 'session[email]' %>
      </div>

      <div class="field">
        <%= form.label :password %>
          <%= form.password_field :password, name: 'session[password]' %>
      </div>

      <div class="actions">
        <%= form.submit 'Log In' %>
      </div>
      <% end %>